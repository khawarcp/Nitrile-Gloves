<section class="newsletter-sec">
  <div class="page-width">
    <div class="newsletter-email-row">
      <h2> {{ section.settings.heading }} </h2>
      
      <div class="newsletter-box">
        {% form 'customer' %}
        <input type="hidden" name="contact[tags]" value="newsletter-section">
        <input type="email" placeholder="Enter your Email" name="contact[email]" value="{{ form.email }}"
        aria-required="true"
        autocorrect="off"
        autocapitalize="off"
        autocomplete="email"
        {% if form.errors %}
          autofocus
          aria-invalid="true"
          aria-describedby="Newsletter-error--{{ section.id }}"
        {% elsif form.posted_successfully? %}
          aria-describedby="Newsletter-success--{{ section.id }}"
        {% endif %}
        placeholder="{{ 'newsletter.label' | t }}"
        required>
        {%- if form.errors -%}
        <small class="newsletter-form__message form__message" id="Newsletter-error--{{ section.id }}">{% render 'icon-error' %}{{ form.errors.translated_fields['email'] | capitalize }} {{ form.errors.messages['email'] }}</small>
      {%- endif -%}
        {%- if form.posted_successfully? -%}
          <h3 class="newsletter-form__message newsletter-form__message--success form__message" id="Newsletter-success--{{ section.id }}" tabindex="-1" autofocus>{% render 'icon-success' %}{{ 'newsletter.success' | t }}</h3>
        {%- endif -%}
        <input type="submit" value="SUBSCRIBE" class="custom-site-btn">
        {% endform %}
      </div>
      
    </div>
  </div>
</section>


{% schema %}
  {
    "name": "Newsletter Section",
    "settings": 
    [
       {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "Sign Up For Our Newsletter For Industry Insights & Special Discounts"
       }
    ],
	"presets":
	[
		{
			"name" : "Newsletter Section",
			"category" : "Custom Sections"
		} 
	]
  }
{% endschema %}

